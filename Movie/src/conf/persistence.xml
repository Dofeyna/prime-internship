<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="MoviePU" transaction-type="JTA">
    <!--      <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>MovieDataB</jta-data-source>
    <class>com.primeInternship.movie.Movie</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/moviedb?create=true"/>
      <property name="serverName" value="localhost"/>
      <property name="PortNumber" value="1527"/>
      <property name="DatabaseName" value="moviedb"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <!-- EclipseLink should create the database schema automatically -->
    </properties>
  </persistence-unit>
</persistence>
